---
import background from "../assets/background.svg";

const API_URL = "https://api.edelmetalle.de/public.json";
let goldPricePerGram = 0;

try {
    const response = await fetch(API_URL);
    const data = await response.json();

    // gold_eur is price per troy ounce, convert to gram
    // 1 troy ounce = 31.1035 grams
    goldPricePerGram = data.gold_eur / 31.1035;

    console.log(`Gold price: â‚¬${goldPricePerGram.toFixed(2)}/gram`);
} catch (error) {
    console.error('Failed to fetch gold price:', error);
}

// Calculate prices using fineness (industry standard)
const karatPrices = {
    '24k (999)': goldPricePerGram,
    '22k (916)': goldPricePerGram * 0.916,
    '21k (900)': goldPricePerGram * 0.900,
    '18k (750)': goldPricePerGram * 0.750,
    '14k (585)': goldPricePerGram * 0.585,
};
---

<div id="container">
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <main>
        <section id="hero">
            <h1>Hayrunnisa's Gold Rechner</h1>

            <div class="content-wrapper">
                <div class="calculator">
                    <div class="input-group">
                        <label for="vendor-price">HÃ¤ndler Verkaufspreis</label>
                        <input type="number" id="vendor-price" placeholder="e.g., 60" step="0.01" />
                    </div>

                    <div class="input-group">
                        <label for="weight">Gewicht in Gramm (Rohgewicht)</label>
                        <input type="number" id="weight" placeholder="e.g., 10" step="0.01" />
                    </div>

                    <div class="input-group">
                        <label for="karat">Karat</label>
                        <select id="karat">
                            <option value="24">24k (999)</option>
                            <option value="22">22k (916)</option>
                            <option value="21">21k (900)</option>
                            <option value="18">18k (750)</option>
                            <option value="14">14k (585)</option>
                        </select>
                    </div>

                    <button id="calculate">berechne</button>
                    <div id="result"></div>
                </div>

                <div class="price-table">
                    <h2>ðŸ’° Aktuelle Goldpreis Kurse</h2>
                    <div class="table-wrapper">
                        <table>
                            <thead>
                            <tr>
                                <th>Karat</th>
                                <th>Preis/Gramm</th>
                            </tr>
                            </thead>
                            <tbody>
                            {Object.entries(karatPrices).map(([karat, price]) => (
                                    <tr>
                                        <td class="karat-cell">{karat}</td>
                                        <td class="price-cell">â‚¬{price.toFixed(2).replace('.', ',')}</td>
                                    </tr>
                            ))}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>

<script define:vars={{ goldPricePerGram }}>
    function formatEuro(amount) {
        return amount.toFixed(2).replace('.', ',');
    }

    const calculateBtn = document.getElementById('calculate');
    const resultDiv = document.getElementById('result');

    // Fineness map for accurate calculations
    const finenessMap = {
        24: 0.999,
        22: 0.916,
        21: 0.900,
        18: 0.750,
        14: 0.585
    };

    calculateBtn?.addEventListener('click', () => {
        const vendorPriceInput = document.getElementById('vendor-price').value.replace(',', '.');
        const weightInput = document.getElementById('weight').value.replace(',', '.');

        const vendorPrice = parseFloat(vendorPriceInput);
        const weight = parseFloat(weightInput);
        const karat = parseFloat(document.getElementById('karat').value);

        if (isNaN(vendorPrice) || isNaN(weight) || isNaN(karat)) {
            resultDiv.textContent = 'Bitte fÃ¼llen Sie alle Felder aus';
            return;
        }

        if (vendorPrice <= 0) {
            resultDiv.textContent = 'Verkaufspreis muss positiv sein';
            return;
        }

        if (weight <= 0) {
            resultDiv.textContent = 'Gewicht muss positiv sein';
            return;
        }

        // Use fineness for accurate spot price calculation
        const fineness = finenessMap[karat];
        const spotprice = weight * goldPricePerGram * fineness;
        const difference = vendorPrice - spotprice;
        const differencePercentage = (difference / spotprice) * 100;

        resultDiv.innerHTML = `
        <div><strong>Spot Preis:</strong> â‚¬${formatEuro(spotprice)}</div>
        <div><strong>Differenz:</strong> â‚¬${formatEuro(difference)} (${formatEuro(differencePercentage)}% Aufpreis)</div>
        `;
    });
</script>

