---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
    <main>
        <a href="/blog">← Back to blog</a>

        <article>
            <h1>{frontmatter.title}</h1>

            <div class="post-meta">
                <time>{new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                })}</time>
                {frontmatter.author && <span> • By {frontmatter.author}</span>}
            </div>

            <slot />
        </article>
    </main>

    <style>
        main {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            font-family: system-ui, sans-serif;
            line-height: 1.6;
        }

        article {
            margin-top: 40px;
        }

        h1 {
            margin-bottom: 10px;
            font-size: 2.5rem;
        }

        .post-meta {
            color: #666;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }

        time {
            font-size: 0.9rem;
        }
    </style>
</Layout>